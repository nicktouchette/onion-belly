<h1>Ingredients</h1>
<%= button_to "Add Ingredient", ingredient_new_path, :method => :get %>
<div class="ingredients">
  <% @ingredients.each do |ingredient| %>
    <div class="container">
      <div class="ingredient" style="background-image: url(<%=ingredient.image%>)">
        <h2><%= link_to ingredient.name, ingredient_path(ingredient) %></h2>
        <p><%= ingredient.food_group %></p>
      </div>
      <div class="button-panel">
        <%= button_to "Add to Supplies", { :controller => "supplies", :action => "create", :'add[ingredient]' => ingredient.name, :remote => true }, :class => "ajax_trigger" %>
        <%= button_to "Edit", ingredient_path(ingredient), :method => :get %>
        <%= button_to "Delete", ingredient, :method => :delete %>
      </div>
    </div>
  <%end%>
</div>

<div id="response_data">
